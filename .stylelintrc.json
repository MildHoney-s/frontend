{
  "plugins": ["stylelint-scss"],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": [true, {
      "ignoreAtRules": [
        "tailwind",
        "apply",
        "variants",
        "responsive",
        "screen",
        "layer",
        "config",
        "once",
        "each",
        "for",
        "include",
        "mixin",
        "theme"
      ]
    }]
  }
}
